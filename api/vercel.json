{
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/gigs/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/conversations/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/messages/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/api/reviews/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "public"
    }
  ]
}
